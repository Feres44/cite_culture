{% extends 'base.html.twig' %}
    {% block content %}
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table m-0">
                    <thead>
                    <tr>
                        <td>Title</td>
                        <td>Description</td>
                        <td>Type</td>
                        <td>Image</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in h   %}
                        <tr>
                            <td>{{ entity.titreHistory }}</td>
                            <td>{{ entity.descriptionHistory}}</td>
                            <td><span class="badge badge-success">{{ entity.idcategorie.typecategorie }}</span></td>
                            <td>{{ entity.image}}</td>
                            <td><a href="{{ path('HistoryDelete',{'id':entity.idHistory}) }}"
                                   class="btn btn-sm btn-secondary float-right">Delete</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>



    {% endblock %}


