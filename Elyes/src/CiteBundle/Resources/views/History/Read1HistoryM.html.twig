


{% extends 'baseM.html.twig' %}
    {% block body %}
        <div class="card-body p-0">
            {% for entity in events   %}
                <div class="table-responsive">

                    <center><h3>{{ entity.titreHistory }}</h3></center><br><br>
                    <table class="table m-0">
                        <thead>
                        </thead>
                        <tbody>
                        <tr>
                            <td><img width="200px" height="200px" src="{{ asset('uploads/images/'~ entity.image) }}" alt="Image not found"></td>
                            <td>Description: {{ entity.descriptionHistory }}</td>
                            <td>Type: {{ entity.idcategorie.TypeCategorie }}</td>
                        </tr>
                        </tbody>
                    </table><br><br><br>
                </div>
            {% endfor %}
        </div>
    {% endblock %}







