{% extends 'base2.html.twig' %}

{% block body %}


    <section class="page-section" id="services">
        <div class="container">
            {% for entity in speak  %}
            <h2 class="text-center mt-0">Speakers</h2>
            <hr class="divider my-4">



            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-laptop-code text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Speaker :</h3>
                        <h3 class="h4 mb-2">{{ entity.nomspeaker }}</h3>



                        <p class="text-muted mb-0"></p>
                    </div>
                </div>



                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-laptop-code text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Nom Speaker :</h3>
                        <h3 class="h4 mb-2">{{ entity.prenomspeaker }}</h3>



                        <p class="text-muted mb-0"></p>
                    </div>
                </div>


                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-laptop-code text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Mail Speaker :</h3>
                        <h3 class="h4 mb-2">{{ entity.mailspeaker}}</h3>



                        <p class="text-muted mb-0"></p>
                    </div>
                </div>


                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-laptop-code text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Date Arrivé :</h3>
                        <h3 class="h4 mb-2">{{ entity.datearrive|date }}</h3>

                        <p class="text-muted mb-0"></p>
                    </div>
                </div>


                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-laptop-code text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Date Départ :</h3>
                        <h3 class="h4 mb-2">{{ entity.datedepart|date}}</h3>

                        <p class="text-muted mb-0"></p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-laptop-code text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Description Speaker :</h3>
                        <h3 class="h4 mb-2">{{ entity.descriptionspeaker}}</h3>

                        <p class="text-muted mb-0"></p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 text-center">
                    <div class="mt-5">
                        <i class="fas fa-4x fa-laptop-code text-primary mb-4"></i>
                        <h3 class="h4 mb-2">Ajouté par:</h3>
                        <h3 class="h4 mb-2">{{ entity.iduser.nom}}</h3>

                        <p class="text-muted mb-0"></p>
                    </div>
                </div>
            </div>

        </div>
        </div>

        {% endfor %}

    </section>


{% endblock %}