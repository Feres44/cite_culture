{% extends 'base.html.twig' %}

{% block content %}

    <div class="card-body p-0">
    <div class="table-responsive">
        <table class="table m-0">
            <thead>
            <tr>
                <td>Date</td>
                <td>Formator</td>
                <td>Class</td>
                <td>Cost</td>
                <td>Room</td>
                <td>Type</td>
            </tr>
            </thead>
            <tbody>
            {% for entity in formations   %}
            <tr>
                <td>{{ entity.DateFormation |date }}</td>
                <td>{{ entity.formateurformation }}</td>
                <td><span class="badge badge-success">{{ entity.classeformation }}</span></td>
                <td>{{ entity.prixformation}}</td>
                <td><span class="badge badge-success">{{ entity.idSalle.idSalle }}</span></td>
                <td>{{ entity.typeformation}}</td>
                <td><a href="{{ path('FormationDelete',{'id':entity.idformation}) }}" class="btn btn-sm btn-secondary float-right">Delete</a></td>
                <td> <a href="{{ path('FormationUpdate',{'id':entity.idformation}) }}" class="btn btn-sm btn-secondary float-right">Update</a> </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
        <td> <a href="{{ path('FormationAdd') }}" class="btn btn-sm btn-secondary float-right">Add Formation</a> </td>
    </div>
    </div>




{% endblock %}