<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">
   <children>
      <TextField fx:id="tfuser" layoutX="257.0" layoutY="181.0" promptText="username" />
      <TextField fx:id="tfpass" layoutX="257.0" layoutY="242.0" promptText="password" />
      <Button fx:id="tfLogin" layoutX="309.0" layoutY="292.0" mnemonicParsing="false" onAction="#Login" text="Login" />
      <Label layoutX="194.0" layoutY="47.0" text="Login" textFill="#66a6de">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Separator layoutX="172.0" layoutY="84.0" prefHeight="0.0" prefWidth="384.0" />
      <Button fx:id="tfsign" layoutX="528.0" layoutY="412.0" mnemonicParsing="false" onAction="#Signup" text="Sign up" />
      <Label layoutX="180.0" layoutY="185.0" text="UserName" />
      <Label layoutX="180.0" layoutY="246.0" text="Password" />
      <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="19.0" prefHeight="95.0" prefWidth="106.0" spacing="30.0" />
      <Hyperlink fx:id="tfpassforgot" layoutX="431.0" layoutY="243.0" onMouseMoved="#passforgot" onMousePressed="#passForgot" text="Forgot Password?" />
      <ImageView fitHeight="95.0" fitWidth="95.0" layoutX="7.0" layoutY="19.0">
         <image>
            <Image url="@Logo1.png" />
         </image>
      </ImageView>
      <Button fx:id="tfExit" layoutX="14.0" layoutY="400.0" mnemonicParsing="false" onAction="#GoToExit" text="Exit" />
   </children>
</AnchorPane>
